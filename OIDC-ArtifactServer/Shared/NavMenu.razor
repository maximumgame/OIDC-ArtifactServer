<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">OIDC-ArtifactServer</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="oi oi-plus" aria-hidden="true"></span> Projects
            </NavLink>
        </div>
        <CascadingAuthenticationState>
            <AuthorizeView Policy="admin">
                <Authorized>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/projects/new">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Create Project
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/projects/access-tokens">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Access Tokens
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="/artifact-culling">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Artifact Cull
                        </NavLink>
                    </div>
                </Authorized>
            </AuthorizeView>
        </CascadingAuthenticationState>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
